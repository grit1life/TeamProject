<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="kr.or.ksmart.mapper.CustomerMapper">
 	<!--개인 고객 등록  -->
 	<insert id="cInsert" parameterType="kr.or.ksmart.domain.Customer">
	INSERT INTO customer  (   customer_id
							 ,customer_pw	
							 ,customer_name
							 ,customer_call
							 ,customer_email
							 ,zip_code
							 ,customer_address
							 ,customer_address2
							 ,customer_class
							 ,customer_level
							 ,input_staff_code
							 ,input_staff_name
							 ,input_date
							 ) VALUES(
							   #{customerId}
							 , #{customerPw}
							 , #{customerName}
							 , #{customerCall}
							 , #{customerEmail}
							 , #{zipCode}
							 , #{customerAddress}
							 , #{customerAddress2}
							 , #{customerClass}
							 , #{customerLevel}
							 , #{inputStaffCode} 
							 , #{inputStaffName}
							 , #{inputDate}  
							 );
	
	
	
	</insert>
 
 
 
	 <!--개인 고객 리스트  -->
	 <select id="getCustomerList" parameterType="String" resultType="kr.or.ksmart.domain.Customer">
		SELECT
				 customer_id    AS customerId
				,customer_name 	AS customerName
				,customer_class	AS customerClass
				,customer_level	AS customerLevel
				,input_date	    AS inputDate

			FROM
				customer
		</select>
		
		
	 <!--개인사업/ 거래처 고객 리스트  -->
	 <select id="getCustomerCompanyList" parameterType="String" resultType="kr.or.ksmart.domain.CustomerCompany">
		SELECT
				 customer_id    AS customerId
				,customer_name 	AS customerName
				,customer_class	AS customerClass
				,customer_level	AS customerLevel
				,input_date	    AS inputDate

			FROM
				customer_company
		</select>

 
 </mapper>